<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#183d67" android:startColor="#183d67" />

            <stroke android:width="1px" android:color="#044062" />

            <corners android:radius="4dp" />

            <padding android:bottom="0dp" android:left="4dp" android:right="4dp" android:top="0dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#8383b9" android:startColor="#7575a4" />

            <stroke android:width="1px" android:color="#044062" />

            <corners android:radius="4dp" />

            <padding android:bottom="0dp" android:left="4dp" android:right="4dp" android:top="0dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#082d57" android:startColor="#082d57" />

            <stroke android:width="1px" android:color="#044062" />

            <corners android:radius="4dp" />

            <padding android:bottom="0dp" android:left="4dp" android:right="4dp" android:top="0dp" />
        </shape></item>

</selector>