<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#22c2f6" android:startColor="#22c2f6" />

            <stroke android:width="1px" android:color="#044062" />

            <corners android:radius="4dp" />

            <padding android:bottom="0dp" android:left="4dp" android:right="4dp" android:top="0dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#8383b9" android:startColor="#7575a4" />

            <stroke android:width="1px" android:color="#044062" />

            <corners android:radius="4dp" />

            <padding android:bottom="0dp" android:left="4dp" android:right="4dp" android:top="0dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#12b2e6" android:startColor="#12b2e6" />

            <stroke android:width="1px" android:color="#044062" />

            <corners android:radius="4dp" />

            <padding android:bottom="0dp" android:left="4dp" android:right="4dp" android:top="0dp" />
        </shape></item>

</selector>